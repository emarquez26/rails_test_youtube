<script type="text/javascript">
function reply_click(clicked_id)
{
    alert(clicked_id);
}
</script>
<center>
  <h2>Videos most popular in youtube</h2>
  <div class="row">
    <p><% @info.videos.each do |video| %>
      <div class="col-sm-4">
        <div class="thumbnail">
          <%= link_to "https://www.youtube.com/v/#{video.unique_id}?version=3&f=standard&d=ARPGKBjorFhRO9PU-FPTCxUO88HsQjpE1a8d1GxQnGDm&app=youtube_gdata", target: '_blank' do %>
            <img class="img-thumbnail" alt="Thumbnail Image" src="<%= video.thumbnails[1].url %>" aria-hidden="true"/>
            <%= "#{video.title.at(1..50)}..." %>
          <% end %>
          <div class="caption">
            <%= "#{video.description.at(1..74)}..." %><br>
            <%= tag "input", { "type" => "button", "value" => "like", "onclick" => "reply_click(this.id)", "id" => "like_#{video.unique_id}", "class" => "btn btn-success btn-xs" } %> 
            <!--<button type="submit" class="btn btn-success btn-xs" id="like_#{video.unique_id}" onClick="reply_click(this.id)">Me gusta</button> -->
          </div>
      <!--<iframe width="560" height="315" src="//www.youtube.com/embed/<%= video.unique_id %>" frameborder="0" allowfullscreen></iframe>-->
        </div>
      </div>
    <% end %></p>
  </div>
</center>

